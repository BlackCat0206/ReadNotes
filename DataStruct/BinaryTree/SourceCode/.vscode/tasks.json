{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc 生成可执行文件",  // 任务名称，后续调试会关联
            "command": "gcc",  // 调用的编译器（已配置环境变量，直接使用gcc即可）
            "args": [
                "-fdiagnostics-color=always",
                "-g",  // 保留调试信息，用于后续gdb调试
                "${file}",  // 编译当前打开的单个源文件（如main.c）
                "-o",  // 输出选项
                "${fileDirname}/${fileBasenameNoExtension}.exe"  // 输出可执行文件（同目录，与源文件同名）
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"  // 识别gcc的编译错误提示
            ],
            "group": {
                "kind": "build",
                "isDefault": true  // 设置为默认构建任务
            },
            "detail": "使用mingw64的gcc编译单个C文件"
        }
    ]
}